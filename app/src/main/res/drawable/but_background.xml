<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@null"></solid>
            <stroke android:color="@android:color/holo_red_dark" android:width="2dp" ></stroke>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_gray_5"/>
            <stroke android:color="@android:color/black" android:width="2dp"></stroke>
            <corners android:radius="10dp"></corners>
        </shape>
    </item>


</selector>